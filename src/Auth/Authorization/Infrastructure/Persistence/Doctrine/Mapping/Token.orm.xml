<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Auth\Authorization\Domain\Token" table="auth_token">
        <id name="id" type="uuid" length="36" column="id" />

        <many-to-one field="client" target-entity="App\Auth\Credential\Domain\Client" fetch="EAGER">
            <join-column name="client_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <field name="expiresIn" type="datetime_immutable" column="expires_in"/>

    </entity>
</doctrine-mapping>
